<h1>Live Crypto Perp Prices</h1>

<div class="box">
  <h2>BTCUSDT (OKX)</h2>
  <div class="price" id="btc">Loading...</div>
  <div class="small" id="time"></div>
</div>

<script>
async function loadPrice() {
  const res = await fetch("https://www.okx.com/api/v5/market/ticker?instId=BTC-USDT-SWAP");
  const data = await res.json();
  document.getElementById("btc").innerText =
    "$" + Number(data.data[0].last).toLocaleString();
  document.getElementById("time").innerText =
    "Updated: " + new Date().toLocaleTimeString();
}

loadPrice();
setInterval(loadPrice, 2000);
</script>

</body>
